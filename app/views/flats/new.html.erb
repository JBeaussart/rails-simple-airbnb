<div class="container">
  <div class="row">
  <div class="col-6 m-auto">
  <h1 class="mb-5">Add a flat</h1>
    <%= simple_form_for [ @flat] do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price_per_night %>
      <%= f.input :number_of_guests %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
      <%= link_to "Cancel", flats_path, class: "btn btn-danger" %>
    <% end %> 
  </div>
  </div>
</div>